<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingActivity" >

    <include android:id="@+id/headerLayout" layout="@layout/activity_header" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/headerLayout"
        android:src="@drawable/icon" />

    <TextView 
        android:id="@+id/lblPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageView1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text="GZ密码箱V2.0"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
    
    <Button
        android:id="@+id/btnMore"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
    	android:layout_below="@id/lblPrompt"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_bt"
        android:text="想了解更多gHut的故事吗？点我吧！！"
        android:textSize="13sp"
        android:textColor="#fff" />
    
    <TextView 
        android:id="@+id/lblCopyright"
        android:inputType="textMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:text="Copyright@2016 GZ Hut Limited\nAll rights reserved"
        android:textSize="10sp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageView
        android:id="@+id/imgAmore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/btnMore"
        android:layout_alignRight="@+id/btnMore"
        android:layout_alignTop="@+id/btnMore"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/learn_more" />
    
</RelativeLayout>